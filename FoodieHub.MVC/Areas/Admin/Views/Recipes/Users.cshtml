@using System.Text.Json
@inject IConfiguration config
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    var recipeData = ViewBag.RecipeData as List<JsonElement> ?? new List<JsonElement>();
    var status = ViewBag.status ?? "Pending";
    var url = config["BaseHost"];
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Recipes - Status: @status</h2>

    <!-- Status Links -->
    <div class="text-center mb-3">
        <a href="@Url.Action("Users", new { status = "Pending" })" class="btn btn-success @((status == "Pending") ? "active" : "")">Pending</a>
        <a href="@Url.Action("Users", new { status = "Approved" })" class="btn btn-info @((status == "Approved") ? "active" : "")">Approved</a>
        <a href="@Url.Action("Users", new { status = "Rejected" })" class="btn btn-danger @((status == "Rejected") ? "active" : "")">Rejected</a>
    </div>

    <!-- Recipe Table -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (recipeData.Count() > 0)
                {
                    @foreach (var recipe in recipeData)
                    {
                        <tr>
                            <td>
                                <img src="@url/images/@recipe.GetProperty("imageURL")" alt="Image" style="height: 50px; object-fit: cover;">
                            </td>
                            <td>@recipe.GetProperty("title")</td>
                            <td>@recipe.GetProperty("fullname")</td>
                            <td>@recipe.GetProperty("categoryName")</td>
                            <td>@recipe.GetProperty("createdAt").GetDateTime()</td>
                            <td>
                                
                                @if(status=="Pending"){
                                    <a asp-action="Detail" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-info btn-sm">Detail</a>
                                    <a asp-action="Approve" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-success btn-sm">Approve</a>
                                    <a class="btn btn-danger btn-sm" onclick="openRejectModal(@recipe.GetProperty("recipeID"))">Reject</a>
                                    <a asp-action="DeleteRecipeOfUser" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-warning btn-sm">Delete</a>
                                }
                                else
                                {
                                    if (status == "Approved")
                                    {
                                        <a asp-action="Detail" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-info btn-sm">Detail</a>
                                        <a class="btn btn-danger btn-sm" onclick="openRejectModal(@recipe.GetProperty("recipeID"))">Reject</a>
                                        <a asp-action="DeleteRecipeOfUser" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-warning btn-sm">Delete</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Detail" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-info btn-sm">Detail</a>
                                        <a asp-action="Approve" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-success btn-sm">Approve</a>
                                        <a asp-action="DeleteRecipeOfUser" asp-route-id="@recipe.GetProperty("recipeID")" class="btn btn-warning btn-sm">Delete</a>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No recipes available for the selected status.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reason for Rejection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="rejectForm" method="post" action="reject">
                    <input type="hidden" id="recipeId" name="recipeId" />
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Rejection Reason</label>
                        <textarea id="rejectionReason" name="comments" class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openRejectModal(recipeId) {
        document.getElementById("recipeId").value = recipeId;

        var rejectModal = new bootstrap.Modal(document.getElementById("rejectModal"));
        rejectModal.show();
    }
</script>
