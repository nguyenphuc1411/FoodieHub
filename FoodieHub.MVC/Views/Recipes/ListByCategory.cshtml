@using FoodieHub.API.Models.DTOs.Recipe
@model IEnumerable<GetRecipeDTO>
@inject IConfiguration config
@{
    ViewData["Title"] = "Recipes by Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = config["BaseHost"];
    var categoryName = ViewData["CategoryName"] as string ?? "Unknown Category";
}
<div class="container">
    <h1 class="pb-5 text-center">Recipes in "@categoryName"</h1>

    <!-- Display Recipes by Category -->
    <div class="container py-5">
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var recipe in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card">
                            <!-- Recipe Image -->
                            <div class="image-container">
                                <img src="@($"{url}/images/{recipe.ImageURL}")" alt="Recipe Image" class="recipe-image" />
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <h5 class="card-title">@recipe.Title</h5>

                                <!-- Rating and Comments -->
                                <div class="rating-comments d-flex align-items-center">
                                    <p class="mb-0 me-2">Rating: @recipe.RatingAverage</p>
                                    ⭐
                                    <p class="mb-0 ms-2">Comments: @recipe.TotalComments</p>
                                </div>

                                <!-- View Detail Button -->
                                <a href="@Url.Action("Detail", new { id = recipe.RecipeID })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">No recipes found in this category.</p>
        }
    </div>

    <!-- Back to All Categories -->
    <div class="text-center py-4">
        <a href="@Url.Action("Index", "Recipes")" class="btn btn-secondary">Back to All Categories</a>
    </div>
</div>
