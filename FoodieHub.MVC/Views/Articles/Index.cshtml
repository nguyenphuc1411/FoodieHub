@using FoodieHub.MVC.Models.Article
@model ArticleViewModel
@inject IConfiguration config
@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = config["BaseHost"];
}

<div class="container my-5">
    <div class="row">
        <h1 class="text-center my-5">Articles</h1>

        <!-- Feature Article Section -->
        <div class="col-md-5">
            @if (Model.TopArticles.Count() >0)
            {
                <img src="@($"{url}/images/{Model.TopArticles.First().MainImage}")"
                     alt="Feature Article Image"
                     class="recipe-image" />
                <p class="my-3" style="color: #A18F7A;">FAVORITE ARTICLE</p>
                <h2 class="my-3">
                    <a asp-action="Detail" asp-route-id="@Model.TopArticles.First().ArticleID">@Model.TopArticles.First().Title</a>
                </h2>
            }
            else
            {
                <p>No favorite article available.</p>
            }
        </div>

        <div class="col-md-1"></div>

        <!-- Top Articles Section -->
        <div class="col-md-6 bg-light p-4">
            <h2 class="my-4 text-center">Top Articles</h2>
            @if (Model.TopArticles != null && Model.TopArticles.Any())
            {
                <ul class="ChuLi">
                    @foreach (var article in Model.TopArticles.Select((value, index) => new { value, index }))
                    {
                        <li>
                            <span>@(article.index + 1).</span>
                            <a asp-action="Detail" asp-route-id="@article.value.ArticleID">@article.value.Title</a>
                            <p class="ms-2">(Lượt yêu thích: @article.value.TotalFavorites)</p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No top articles available.</p>
            }
        </div>
    </div>

    <div class="ngancach"></div>

    <!-- Article News Section -->
    <div class="row">
        <h2>Article News</h2>

        <!-- Latest Article -->
        <div class="col-md-5 my-3">
            @if (Model.LatestArticlesList != null)
            {
                <img src="@($"{url}/images/{Model.LatestArticlesList.First().MainImage}")"
                     alt="Article News Image"
                     class="recipe-image" />
                <p class="my-2" style="color: #A18F7A;">@Model.LatestArticlesList.First().CreatedAt.ToString("dd/MM/yyyy/hh:mm:ss")</p>
                <h2 class="my-3">
                    <a asp-action="Detail" asp-route-id="@Model.LatestArticlesList.First().ArticleID">@Model.LatestArticlesList.First().Title</a>
                </h2>
            }
            else
            {
                <p>No latest article available.</p>
            }
        </div>

        <div class="col-md-1"></div>

        <!-- Latest Articles List -->
        <div class="col-md-6 my-3">
            <div class="col d-flex justify-content-between">
                <h2 style="font-style: italic;">Latest</h2>
                <a asp-action="ViewAll" style="color: #A18F7A; font-style: italic; text-decoration: none;">VIEW ALL ></a>
            </div>

            @if (Model.LatestArticlesList != null && Model.LatestArticlesList.Any())
            {
                @foreach (var article in Model.LatestArticlesList)
                {
                    <div class="latest-recipe d-flex align-items-center mb-4">
                        <div class="col-8">
                            <p class="my-2" style="color: #A18F7A;">@article.CreatedAt.ToString("dd/MM/yyyy/hh:mm:ss")</p>
                            <h4>
                                <a asp-action="Detail" asp-route-id="@article.ArticleID">@article.Title</a>
                            </h4>
                        </div>
                        <div class="col-4">
                            <img src="@($"{url}/images/{article.MainImage}")"
                                 alt="Article Image"
                                 class="latest-recipe-image" />
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No latest articles available.</p>
            }
        </div>
    </div>
</div>


